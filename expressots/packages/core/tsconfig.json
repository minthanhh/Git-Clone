{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "target": "ES2017",
    "sourceMap": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noLib": false,
    "strictBindCallApply": false,
    "importHelpers": true,
    "removeComments": false,
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false
  },
  "include": [
    "./src/**/*.ts",
     "src/application/application.tsn/application.ts",  
    ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}